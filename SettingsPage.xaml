<Page
    x:Class="Oabac.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="16">
            <TextBlock Text="Settings" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,0,0,12"/>

            <!-- Sync Settings Card -->
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="SYNC SETTINGS" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <!-- Sync Interval -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Sync Interval" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="How often to check for changes and sync files." Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ComboBox x:Name="SyncIntervalCombo" Grid.Column="1" VerticalAlignment="Center" MinWidth="120" SelectionChanged="OnSyncIntervalChanged">
                            <ComboBoxItem Content="30 minutes"/>
                            <ComboBoxItem Content="1 hour"/>
                            <ComboBoxItem Content="2 hours"/>
                        </ComboBox>
                    </Grid>

                    <!-- Mirror Deletions -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Mirror Deletions" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Delete files from destination when they're removed from source." Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="MirrorDeleteSwitch" Grid.Column="1" VerticalAlignment="Center" Toggled="OnMirrorDeleteClicked"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Application Settings Card -->
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="APPLICATION SETTINGS" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <!-- Run at Startup -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Run at Startup" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Automatically launch Oabac when you log in to Windows." Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="StartupSwitch" Grid.Column="1" VerticalAlignment="Center" Toggled="OnStartupClicked"/>
                    </Grid>

                    <!-- Minimize to Tray -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Minimize to Tray" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Keep the app running in the background when you close the window." Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="MinimizeToTraySwitch" Grid.Column="1" VerticalAlignment="Center" Toggled="OnMinimizeToTrayClicked"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
