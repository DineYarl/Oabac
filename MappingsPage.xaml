<Page
    x:Class="Oabac.MappingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="16">
            <TextBlock Text="Sync Mappings" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,0,0,12"/>

            <!-- Existing Mappings Card -->
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                <ListView x:Name="MappingList" ItemsSource="{x:Bind Mappings}" SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,8">
                                <TextBlock Text="{Binding SourceFolder}" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72A;" FontSize="12" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{Binding DestinationFolder}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <!-- Add/Remove Card -->
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBox x:Name="SourceText" Header="Source Folder"/>
                    <Button Content="Browse..." Click="OnBrowseSource" HorizontalAlignment="Left"/>
                    <TextBox x:Name="DestText" Header="Destination Folder"/>
                    <Button Content="Browse..." Click="OnBrowseDest" HorizontalAlignment="Left"/>
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="Add Mapping" Click="OnAddMapping" Style="{ThemeResource AccentButtonStyle}"/>
                        <Button Content="Remove Selected" Click="OnRemoveMapping"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
